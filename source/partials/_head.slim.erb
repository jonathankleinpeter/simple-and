meta charset="utf-8"
    / Always force latest IE rendering engine or request Chrome Frame
    meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"

    meta name="google" content="notranslate"
    meta name="viewport" content="initial-scale=1, maximum-scale=1"
    meta name="author" content="Chloé Heinis, Jonathan Kleinpeter"
    meta name="robots" content="noodp"

    / Use title if it's in the page YAML frontmatter
    title=current_page.data.h1_wording || current_page.data.title || 'Chloé et Jonathan Studio'
    link rel="icon" type="image/png" href="ico.png"

    / Facebook sharing
    meta property="og:url" content="https://chloejonathanstudio.com"
    meta property="og:type" content="website"
    meta property="og:title" content="Chloé et Jonathan Studio - #{current_page.data.h1_wording || current_page.data.title || 'Graphic design'}"
    meta property="og:description" content="#{current_page.data.resume || 'Chloé & Jonathan is a Graphic design studio based in Paris. We help ambitious companies to create or develop their brand image.'}"
    meta property="og:image" content="https://chloejonathanstudio.com/#{current_page.data.heading_image || 'images/og_picture.png' }"

    <link rel="stylesheet" type="text/css" href="stylesheets/site.css">
    script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"
    <script src="javascripts/site.js"></script>